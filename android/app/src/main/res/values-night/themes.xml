<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EffectWallet" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gradientStartColor</item>
        <item name="colorPrimaryVariant">@color/gradientStartColor900</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gradientStartColor200</item>
        <item name="colorSecondaryVariant">@color/gradientStartColor900</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetRoundedCorners</item>
    </style>

    <style name="BottomSheetRoundedCorners" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bgr_bottomsheet_round_corners</item>
    </style>

    <style name="FragmentDialogAnim">
        <item name="android:windowEnterAnimation">@anim/left_to_right</item>
        <item name="android:windowExitAnimation">@anim/right_to_left</item>
    </style>

    <style name="alertDialogTheme" parent="Theme.MaterialComponents.Dialog">
        <item name="android:background">@color/white</item>
    </style>

    <style name="TextInputLayoutLightGreyOutline" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
    </style>

    <style name="ToggleButtonGroupStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/toggle_btn_selector</item>
    </style>
</resources>